# .env - Configuração de variáveis de ambiente

# Banco de Dados Local (desenvolvimento)
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=
DB_NAME=testdb
DB_PORT=5432

# Banco de Dados Produção PostgreSQL Render (SUBSTITUIR COM VALORES REAIS)
# Obtenha em: https://dashboard.render.com → seu PostgreSQL → Info
DB_HOST_PROD=dpg-xxxxx.oregon-postgres.render.com
DB_USER_PROD=seu_usuario
DB_PASSWORD_PROD=sua_senha
DB_NAME_PROD=seu_banco
DB_PORT_PROD=5432

# Porta da aplicação
PORT=3000

# Ambiente
NODE_ENV=development
